                            <MenuItem fx:id="loadButton" mnemonicParsing="false" text="Load" />
                          </items>
                        </Menu>
                      <Menu mnemonicParsing="false" text="Options">
                        <items>
                          <MenuItem fx:id="propertiesButton" mnemonicParsing="false" onAction="#propertiesClick" text="Properties" />
                        </items>
                      </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#HelpClicked" text="Help" />
                        <MenuItem mnemonicParsing="false" onAction="#AboutClicked" text="About" />
                      <MenuItem mnemonicParsing="false" onAction="#ContactusClicked" text="ContactUs" />
                        <MenuItem fx:id="exitButton" mnemonicParsing="false" onAction="#exitClick" text="Exit" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="https://i.ibb.co/M5j09ZB/Start-Screen.jpg" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </top>
   <center>
   </center>
